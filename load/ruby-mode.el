	     (define-key ruby-mode-map "\C-o" 'other-window)
	     (define-key ruby-mode-map "\C-j" 'fastdown)
	     (define-key ruby-mode-map "\C-h" 'fastup)
	     (define-key ruby-mode-map "\C-l" 'next-buffer)
	     (define-key ruby-mode-map "\M-l" 'previous-buffer)))
