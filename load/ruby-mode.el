(add-hook 'ruby-mode-hook
	  '(lambda ()
	     (setq ruby-insert-encoding-magic-comment nil)
	     ;;	     (define-key ruby-mode-map "\C-h" 'backward-kill-word)
	     (define-key global-map "\C-c\C-r" 'query-replace)
	     (define-key ruby-mode-map "\C-m" 'newline-and-indent)
	     ;;	     (define-key ruby-mode-map "\C-x\C-s" (lambda () (interactive) (command-execute 'indent-all) (command-execute 'save-buffer)))
